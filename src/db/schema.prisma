datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int     @id @default(autoincrement())
    username String  @unique
    email    String  @unique
    password String
    movies   Movie[]
}

model Movie {
    id          Int      @id @default(autoincrement())
    movieName   String
    description String
    director    String
    releaseDate DateTime
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
}
